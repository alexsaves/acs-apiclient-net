<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <acs_apiclient.Droid.CustomViews.EasyTintImageButton
        android:id="@+id/easyTintImageButton_titlebarWithExitAndRefreshButtons_close"
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:background="@drawable/ic_close_black_36dp" />
    <TextView
        android:id="@+id/textview_titlebarWithExitAndRefreshButtons_title"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/obsidian" />
    <acs_apiclient.Droid.CustomViews.EasyTintImageButton
        android:id="@+id/easyTintImageButton_titlebarWithExitAndRefreshButtons_sync"
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:background="@drawable/ic_sync_black_36dp" />
</RelativeLayout>